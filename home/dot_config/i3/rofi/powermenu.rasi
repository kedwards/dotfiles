// i3 powermenu
@theme "dark_theme.rasi"

configuration {
    show-icons:       false;
    scroll-method:    0;
    disable-history:  true;
    fullscreen:       false;
    hide-scrollbar:   true;
    sidebar-mode:     false;
}

window {
    width:      260px;
    location:   east;
    anchor:     east;
}

listview {
    lines:    7;
    columns:  1;
}

mainbox {
    children: [ listview ];
}